# Server Configuration
PORT=3000
NODE_ENV=production

# Security Configuration
# CORS origin - Use specific domain in production (e.g., https://yourdomain.com)
CORS_ORIGIN=*

# Rate Limiting
# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000
# Maximum requests per window (default: 30)
RATE_LIMIT_MAX=30

# File Upload Configuration
# Maximum file size in bytes (default: 16777216 = 16MB)
MAX_FILE_SIZE=16777216

# Session Secret (optional - for future authentication)
# SESSION_SECRET=your-secret-key-here

# Database (optional - for future implementation)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=whatsapp_api
# DB_USER=postgres
# DB_PASSWORD=your-password

# Redis (optional - for scaling)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Logging
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# Webhook (optional - for future implementation)
# WEBHOOK_URL=https://your-webhook-url.com/webhook
# WEBHOOK_SECRET=your-webhook-secret